name: train_val_test_split
conda_env: conda.yml

entry_points:
  train_val_test_split:
    parameters:
      input_artifact:
        type: string
        default: "clean_sample.csv"
      test_size:
        type: float
        default: 0.2
      random_seed:
        type: int
        default: 42
      stratify_by:
        type: string
        default: "none"
    command: >
      python run.py
      --input_artifact {input_artifact}
      --test_size {test_size}
      --random_seed {random_seed}
      --stratify_by {stratify_by}

